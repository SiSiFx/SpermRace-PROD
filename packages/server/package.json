{
  "name": "server",
  "version": "0.0.0",
  "description": "SpermRace.io game server - Authoritative multiplayer backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter shared build && tsc-watch --onSuccess \"node dist/index.js\"",
    "dev:devnet": "cross-env SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com ENABLE_DEV_BOTS=true DEV_BOTS_TARGET=8 SKIP_ENTRY_FEE=true pnpm dev",
    "dev:devnet:paid": "cross-env SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com ENABLE_DEV_BOTS=true DEV_BOTS_TARGET=8 pnpm dev",
    "start:devnet": "cross-env SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com node dist/index.js",
    "start": "node dist/index.js",
    "build": "pnpm --filter shared build && tsc",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@jup-ag/api": "^6.0.20",
    "@skidr/core": "workspace:*",
    "@solana/web3.js": "^1.91.4",
    "better-sqlite3": "^12.4.1",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.1.0",
    "shared": "workspace:*",
    "tsc-watch": "^6.0.4",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@vitest/ui": "^4.0.9",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.5.3",
    "vitest": "^4.0.9"
  }
}