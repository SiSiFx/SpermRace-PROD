{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "description": "SpermRace.io game client - Real-time multiplayer battle royale arena",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--experimental-global-webcrypto\" vite --port 5174",
    "demo": "cross-env NODE_OPTIONS=\"--experimental-global-webcrypto\" vite --mode demo --port 5174",
    "prod": "cross-env NODE_OPTIONS=\"--experimental-global-webcrypto\" vite build --mode production && vite preview --mode production --port 5174",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "build:demo": "tsc && vite build --mode demo",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview --port 5174",
    "preview:demo": "vite preview --mode demo --port 5174",
    "preview:prod": "vite preview --mode production --port 5174",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run",
    "test:mobile": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --reporter=verbose",
    "test:mobile:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest --reporter=verbose",
    "test:mobile:ui": "NODE_OPTIONS='--max-old-space-size=2048' vitest --ui",
    "test:mobile:coverage": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@solana-mobile/wallet-adapter-mobile": "^2.2.4",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-walletconnect": "^0.1.21",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "phosphor-react": "^1.4.1",
    "pixi.js": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shared": "workspace:*",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "canvas": "^3.2.0",
    "cross-env": "^7.0.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "typescript": "~5.5.3",
    "vite": "^5.4.8",
    "vitest": "^4.0.9"
  }
}
